<mvc:View xmlns:mvc="sap.ui.core.mvc" 
  xmlns="sap.m" 
  xmlns:control="ck.expert.control" 
  xmlns:indicator="ck.expert.control.indicator">
  <VBox>
    <control:CandlestickChart candles="{/}" 
      padding="30" 
      height="240">
      <control:candles>
        <control:Candle x="{time}" 
          open="{open}" 
          high="{high}" 
          low="{low}" 
          close="{close}" 
          buy="{= ${advice} === 1}" 
          sell="{= ${advice} === -1}"/>
      </control:candles>
    </control:CandlestickChart>
    <indicator:CCI0 points="{/}" 
      padding="30" 
      threshold="100" 
      height="120">
      <indicator:points>
        <control:Point x="{time}" 
          y="{cci}"/>
      </indicator:points>
    </indicator:CCI0>
  </VBox>
</mvc:View>
